{
  "manifest_version": 2,

  "name": "Lacrime e Sangue",

  "version": "9.1",

  "content_security_policy": "script-src 'self' 'sha256-AbCdEf123='; object-src 'self'",

  "description": "June version of our beloved extension",
   
  "permissions": [
    "activeTab",  // Allows the extension to interact with the active tab
    "scripting"  // Allows the extension to inject scripts
  ],
  
  "browser_action": {
    "default_icon": "icon.png",  
    "default_popup": "Popup.html"  
  },
  
  "icons": {
    "48": "icon.png"  // 48x48 icon for the extension
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],  // Inject the scripts into all URLs
      "css": ["stile.css"],  // Path to the CSS file to inject
      "js": ["Popup.js"]  // Path to the JavaScript file to inject
    }
  ],

  "web_accessible_resources": [
    "questionnaire.html",  // Path to the questionnaire HTML file
    "questionnaire.js"  // Path to the questionnaire JavaScript file
  ]
}
