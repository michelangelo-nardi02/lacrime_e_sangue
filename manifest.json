// Defines basic information about the extension: version, name, and description
{
  "manifest_version": 2,
  "name": "MVP - January 2024",
  "version": "6.1",
  "description": "This Chrome extension helps users contextualize online articles. The current version verifies whether the news webpage is listed in our server and returns its corresponding ID and politicalÂ orientation.",
  
  // Specifies the permissions required by the extension
  "permissions": [
    "activeTab",
    "scripting"
  ],
  
  // Describes the icon and popup behavior when clicking on the extension icon
  "browser_action": {
    "default_icon": "image.png",
    "default_popup": "popup.html"
  },
  
  // Specifies the icon image for a specific size
  "icons": {
    "48": "image.png"
  },
  
  // Configures content scripts that should run on specified URLs
  "content_scripts": [
    {
      // Describes that the script should work on all URLs
      "matches": ["<all_urls>"],
      
      // Specifies the JavaScript file to be loaded for content scripts
      "js": ["popup.js"]
    }
  ]
}
